# .env.template
#
# Environment variable template for the backend application.
# Copy this file to .env and set the appropriate values for your environment.
#
# DATABASE_URL: Connection string for the database (e.g., MySQL)
DATABASE_URL=mysql://user:password@localhost:3306/your_database

# JWT_SECRET_KEY: Secret key for signing JWT tokens
JWT_SECRET_KEY=your_jwt_secret_key

# JWT_ALGORITHM: Algorithm used for JWT signing (e.g., HS256)
JWT_ALGORITHM=HS256

# JWT_EXPIRATION_TIME: JWT expiration time in minutes (e.g., 1440m = 24 hours)
JWT_EXPIRATION_TIME=1440m

# ENCRYPTION_KEY: Key for encrypting sensitive data
ENCRYPTION_KEY=your_encryption_key

# HF_API_KEY: API key for Hugging Face service
HF_API_KEY=your_openrouter_api_key